                android:id="@+id/CellB"
                android:layout_width="260.95px"
                android:layout_height="255px"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="B"
                android:textSize="25dp" />

            <TextView
