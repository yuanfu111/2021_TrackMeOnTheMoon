        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id='@+id/Prob_A'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prob_A"/>
                <TextView
                    android:id='@+id/Prob_B'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prob_B"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id='@+id/Prob_C'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prob_C"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id='@+id/Prob_D'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prob_D"/>
                <TextView
                    android:id='@+id/Prob_E'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prob_E"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id='@+id/Prob_F'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prob_F"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id='@+id/Prob_G'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prob_G"/>
                <TextView
                    android:id='@+id/Prob_H'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prob_H"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id='@+id/Prob_I'
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prob_I"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="700px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CellA"
                android:layout_width="137.7px"
                android:layout_height="255px"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="A"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/CellE"
                android:layout_width="137.7px"
                android:layout_height="255px"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="E"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
