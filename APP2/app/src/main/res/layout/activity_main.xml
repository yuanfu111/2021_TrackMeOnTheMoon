            <TextView
                android:id="@+id/CellD"
                android:layout_width="189.55px"
                android:layout_height="510px"
                android:layout_weight="1"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="D"
                android:textSize="25dp" />
        </LinearLayout>

